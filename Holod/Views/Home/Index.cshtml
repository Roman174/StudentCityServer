@using Holod.Models.Database
@model List<Hostel>

@{
    ViewData["Title"] = "Главная";
}

<div class="content-container">
    <div class="side-bar">
        @{
            foreach (Hostel hostel in Model)
            {
                <button class="hostel-item">
                    @hostel.Title
                </button>
            }
        }
    </div>
    @if(Model.Count() > 0)
    {
        <partial name="~/Views/Home/HostelInfo.cshtml" model="@Model[0]" />
    }
</div>