@{
    ViewData["Title"] = "Добавление общежития";
}

<div class="center-form">
    <form method="post" asp-action="add" asp-controller="hostel" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Название общежития</label>
            <input class="form-control" name="hostel.title" placeholder="Название общежития" />
        </div>
        <div class="form-group">
            <label for="title">Адрес общежития</label>
            <input class="form-control" name="hostel.address" placeholder="Адрес общежития" />
        </div>
        <div class="form-group">
            <label for="title">Координаты общежития</label>
            <input class="form-control" name="latitude" 
                   placeholder="Широта" />
            <input class="form-control" name="longitude" 
                   placeholder="Долгота" style="margin-top:8px" />
        </div>
        <div class="form-group">
            <label for="title">Телефон заведующего общежития</label>
            <input class="form-control" name="hostel.phone" placeholder="Телефон завудующего общежития" />
        </div>
        <div class="form-group">
            <label for="title">Количество этажей общежития</label>
            <input type="number" class="form-control" name="hostel.NumberFloors" placeholder="Количество этажей общежития" />
        </div>
        <div class="form-group">
            <label for="title">Количество студентов в общежитии</label>
            <input type="number" class="form-control" name="hostel.NumberStudents" placeholder="Количество студентов в общежитии" />
        </div>
        <div class="form-group">
            <label for="photo">Фотография общежития</label>
            <input id="photo" type="file" name="photo" /><br>
        </div>
        <input style="margin-bottom:60px" type="submit" value="Добавить" />
    </form>
</div>